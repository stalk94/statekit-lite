{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "statekit-lite": ["./src"]
        }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "examples"
    ]
}